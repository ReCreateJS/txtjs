{
  "name": "@recreatejs/txtjs",
  "repository": "github:ReCreateJS/txtjs",
  "homepage": "https://recreatejs.github.io/txtjs",
  "version": "0.10.0",
  "description": "A <canvas> font and typesetting engine for @CreateJS",
  "author": "Ted Patrick (http://tedpatrick.com)",
  "contributors": [
    "Jeremy Shipman (https://jeremyshipman.com)"
  ],
  "license": "BSD-2-Clause",
  "main": "dist/txt.cjs.js",
  "module": "dist/txt.esm.js",
  "browser": "dist/txt.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "copy": "copyfiles -f ./node_modules/easeljs/lib/easeljs.js ./node_modules/pathseg/pathseg.js dist",
    "build": "mkdir -p tmp && npm run build:js && npm run copy",
    "build:js": "rollup -c",
    "build:js:watch": "npm run build:js -- --watch",
    "build:types": "tsc --emitDeclarationOnly --declarationDir dist/types",
    "build:docs": "typedoc --tsconfig src",
    "server": "live-server .",
    "dev": "npm run build:js && npm run server",
    "lint": "eslint . --ext .ts && prettier --check **/*.js",
    "lint:fix": "eslint . --ext .ts --fix && prettier --write **/*.js",
    "test": "npm run lint && npm run test:ci",
    "test:ci": "HEADLESS=true testem ci",
    "test:dev": "testem",
    "test:coverage:view": "npx http-server coverage/lcov-report"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@recreatejs/jasmine-pixelmatch": "^0.1.0",
    "@rollup/plugin-typescript": "^4.0.0",
    "@types/createjs": "0.0.29",
    "@types/createjs-lib": "0.0.29",
    "@types/easeljs": "^1.0.0",
    "@types/jasmine": "^3.5.2",
    "@types/tweenjs": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "copyfiles": "^2.3.0",
    "easeljs": "^1.0.2",
    "eslint": "^6.8.0",
    "jasmine-core": "^3.5.0",
    "live-server": "^1.2.1",
    "pathseg": "^1.2.0",
    "prettier": "^1.19.1",
    "rollup": "^1.31.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "testem": "^3.0.2",
    "typedoc": "^0.16.7",
    "typescript": "^3.7.5"
  },
  "files": [
    "definitions",
    "dist",
    "src",
    "font",
    "tools"
  ]
}
