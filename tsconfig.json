{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "ES2015",
    "target": "ES2015",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "definitions"],
  "typedocOptions": {
    "inputFiles": "src",
    "mode": "file",
    "out": "docs/",
    "name": "txtjs"
  }
}
